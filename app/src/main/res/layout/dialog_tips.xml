<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/tips_letter"
        style="@style/TipsButtonStyle"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/baseline_font_download_black_24"
            android:gravity="center"
            android:text="Показать букву"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/tips_coins"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tips_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/coin_icon"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tips_remove"
        style="@style/TipsButtonStyle"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/baseline_clear_black_24"
            android:gravity="center"
            android:text="Убрать лишнее"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/tips_coins"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tips_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/coin_icon"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tips_skip"
        style="@style/TipsButtonStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/baseline_exit_to_app_black_24"
            android:gravity="center"
            android:text="Пропустить уровень"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/tips_coins"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tips_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/coin_icon"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>