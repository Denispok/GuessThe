<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/coins_item_height"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/coins_item_padding"
    android:paddingEnd="@dimen/coins_item_padding"
    tools:background="@color/colorBackground">

    <TextView
        android:id="@+id/coinsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description_coins"
        android:drawableEnd="@drawable/coin_icon_16"
        android:drawablePadding="@dimen/coins_item_drawable_padding"
        android:shadowColor="@color/colorTextShadow"
        android:shadowRadius="@dimen/textShadowRadiusLight"
        android:textColor="@color/colorText"
        android:textSize="@dimen/coins_item_text_size"
        tools:text="500" />

    <TextView
        android:id="@+id/removeAdsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:shadowColor="@color/colorTextShadow"
        android:shadowRadius="@dimen/textShadowRadiusLight"
        android:text="@string/remove_ads"
        android:textColor="@color/colorText"
        android:textSize="@dimen/coins_remove_ads_text_size" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorTextShadow"
        android:shadowRadius="@dimen/textShadowRadiusLight"
        android:textColor="@color/colorText"
        android:textSize="@dimen/coins_item_text_size"
        tools:text="49,00 ла" />

</LinearLayout>