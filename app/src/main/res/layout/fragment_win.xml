<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/win_margin"
        android:layout_marginTop="@dimen/win_margin"
        android:text="@string/success"
        android:textColor="@color/colorText"
        android:textSize="@dimen/win_success_text_size" />

    <ImageView
        android:id="@+id/win_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:transitionName="ImageTransition" />

    <TextView
        android:id="@+id/win_word"
        fontPath="fonts/Exo_2/Exo2-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/win_margin"
        android:layout_marginTop="@dimen/win_margin"
        android:background="@android:color/transparent"
        android:text="word"
        android:textAllCaps="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/win_word_text_size" />

    <TextView
        android:id="@+id/win_reward_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/win_margin"
        android:background="@drawable/button_selector_green"
        android:drawableRight="@drawable/coin_icon"
        android:padding="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="100"
        android:textColor="@color/colorText"
        android:textSize="@dimen/win_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/win_margin"
        android:background="@drawable/button_selector_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/win_x2"
            fontPath="fonts/Exo_2/Exo2-Bold.ttf"
            android:layout_width="@dimen/x2_dimen"
            android:layout_height="@dimen/x2_dimen"
            android:layout_marginEnd="4dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="x2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x2_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/coins"
                android:textColor="@color/colorText"
                android:textSize="@dimen/win_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/video"
                android:textColor="@color/colorText"
                android:textSize="@dimen/x2_small_text_size" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/win_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/win_margin"
        android:background="@drawable/button_selector_blue"
        android:padding="6dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/win_text_size" />

</LinearLayout>