<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/levelmenu_button_width"
    android:layout_height="@dimen/levelmenu_button_height"
    android:layout_marginBottom="@dimen/levelmenu_button_margin_bottom"
    android:background="@drawable/button_selector_blue"
    android:orientation="vertical"
    android:padding="@dimen/levelmenu_button_padding">

    <TextView
        android:id="@+id/levelmenu_button_pack_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:text="Русские Авто"
        android:textColor="@android:color/white"
        android:textSize="@dimen/levelmenu_button_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/levelmenu_progress_bar_height"
        android:background="@android:color/transparent">

        <ProgressBar
            android:id="@+id/levelmenu_button_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/progress_bar_horizontal_background"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_horizontal" />

        <TextView
            android:id="@+id/levelmenu_button_progress_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColor="#a0000000"
            android:textSize="@dimen/levelmenu_progress_bar_text_size" />

    </RelativeLayout>

</LinearLayout>