<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TipsButtonStyle">
        <item name="android:layout_width">@dimen/tips_button_width</item>
        <item name="android:layout_height">@dimen/tips_button_height</item>
        <item name="android:background">@drawable/button_selector_white</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">#b7b7b7</item>
    </style>

</resources>
